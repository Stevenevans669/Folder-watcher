{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Folder Watcher",
  "version": "0.1.0",
  "identifier": "com.folder-watcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Folder Watcher",
        "width": 900,
        "height": 600,
        "minWidth": 700,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/watcher-sidecar"]
  }
}
